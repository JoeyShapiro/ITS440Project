<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ITS440Proj.PageDiscover">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Discover Recipes!"
                   FontSize="Large"
                   TextColor="Red"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="entrySearch" Placeholder="Search" HorizontalOptions="FillAndExpand" />
            <!-- list for Recipe list -->
            <ListView x:Name="listData">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <!-- each recipe in the list -->
                        <ViewCell>
                            <ViewCell.ContextActions>
                                <MenuItem Clicked="OnDownload" CommandParameter="{Binding .}" Text="Download" />
                            </ViewCell.ContextActions>
                            <Label x:Name="listDataTitle" Text="{Binding title}" HorizontalOptions="FillAndExpand" FontSize="Title" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>